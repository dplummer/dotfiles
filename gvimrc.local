color darkspectrum
set guioptions=aAce
set columns=160
set guifont=InconsolataXL:h12
set wrap
set colorcolumn=81
highlight ColorColumn ctermbg=black guibg=grey

" list and invisible characters
set list
set listchars=tab:▸\ ,eol:¬

" makes ,w split windows vertically
nnoremap <leader>w <C-w>v<C-w>l

" split window navigation
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
